<h1>Editing Book</h1>

<% if flash[:notice] %>
      <div class="flash">
        <p><%= flash[:notice] %></p>
      </div>
    <% end %>

<%= form_for(@book) do |f| %>
<%= render 'layouts/error_messages', model: f.object %>

<div class="field">
	<%= f.label :title,"Title" %>
    <%= f.text_field :title %>
    </div>

<div class="field">
    <%= f.label :body,"Body" %>
    <%= f.text_area :body %>
    </label>
    </div>


<div class="actions">
    <%= f.submit 'Update Book' %>
    </div>

<% end %>

<%= link_to "Show", book_path(@book.id) %>
